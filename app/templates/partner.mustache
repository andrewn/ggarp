<!DOCTYPE html>
<html>
  {{>head}}
  <body class="grid">
    <div id="page"> 
      {{>masthead}}

      {{>navigation}}

      {{#current_partner}}
	      <div id="artist">
      		<h2>{{name}}</h2>
      		<div id="description">
      			<p class="highlight">&quot;{{quote}}&quot;</p>
      			{{description}}
      			{{#links}}
      			<p class="link"><a href="{{url}}">{{text}}</a></p>
      			{{/links}}
      		</div> <!-- #description -->
      		<div id="gallery">
                        <ul>
                              {{#media}}
                              <li>
                                    <a href="#media-{{media_id}}">
                                          <img class="thumb" width="100" height="100" src="{{thumb}}" alt="img">
                                    </a>
                                    <img id="media-{{media_id}}" class="main" width="640" height="360" src="{{full}}" alt="img">
                              <li>
                              {{/media}}   
                        </ul>
                  </div> <!-- #gallery -->
      	</div> <!-- #artist -->
	     {{/current_partner}}
	
      </div> <!-- #content -->
      <div id="footer"></div>
    </div> <!-- #page -->

    {{>end}}
    
  </body>
</html>