<!DOCTYPE html>
<html>
  {{>head}}
  <body class="grid">
    <div id="page"> 
      {{>masthead}}

      <div id="content">
	      <div id="navigation">
		      <ul class="artists">
		      	<h2>Artists</h2>
      			{{#artists}}
      			<li><a href="/artist/{{name_as_url}}"{{#is_selected}} class="selected"{{/is_selected}}>{{name}}</a></li>
      			{{/artists}}
      		</ul>
          {{>partners_list}}
      	</div> <!-- #navigation -->
	
            {{#current_artist}}
	      <div id="artist">
      		<h2>{{name}}</h2>
      		<div id="description">
      			<p class="highlight">&quot;{{highlight}}&quot;</p>
      			{{{bio}}}
      			{{#event}}
      			<p class="event-info">
      			    <span class="type">{{type}}</span><br />
      			    <span class="date">{{date}}</span><br />
      			    <span class="place">{{venue}}</span>
      			</p>
      			{{/event}}
      			{{#links}}
      			<p class="link"><a href="{{url}}">{{text}}</a></p>
      			{{/links}}
      		</div> <!-- #description -->
      		<div id="gallery">
      		  <ul>
      			{{#media}}
      			<li>
      			  <a href="#media-{{media_id}}">
      			    <img class="thumb" width="100" height="100" src="{{thumb}}" alt="img">
      			  </a>
      			  <img id="media-{{media_id}}" class="main" width="640" height="360" src="{{full}}" alt="img">
      			<li>
      	    {{/media}}   
      	    </ul>
      		</div> <!-- #gallery -->
      	</div> <!-- #artist -->
	     {{/current_artist}}
	
      </div> <!-- #content -->
      <div id="footer"></div>
    </div> <!-- #page -->
  </body>
</html>